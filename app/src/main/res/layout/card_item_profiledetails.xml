<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"


    android:layout_height="match_parent" >


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_stats"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"

        android:layout_marginTop="30dp"
        card_view:cardBackgroundColor="@color/blue"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            >


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:id="@+id/imgTrips"
                android:layout_alignTop="@+id/txtRatings"
                android:layout_toRightOf="@+id/txtRatings"
                android:layout_toEndOf="@+id/txtRatings" />

            <TextView
                android:text="0"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:id="@+id/txtTrips"
                android:layout_alignTop="@+id/imgTrips"
                android:layout_toRightOf="@+id/imgTrips"
                android:layout_toEndOf="@+id/imgTrips" />

            <TextView
                android:text="Trips"
                android:layout_width="50dp"
                android:gravity="center"
                android:id="@+id/txtTripslabel"
                android:layout_height="25dp"
                android:layout_below="@+id/txtTrips"
                android:layout_toRightOf="@+id/imgTrips"
                android:layout_toEndOf="@+id/imgTrips" />

            <TextView
                android:text="0"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:id="@+id/txtBadges"
                android:layout_alignTop="@+id/imgBadges"
                android:layout_toRightOf="@+id/imgBadges"
                android:layout_alignRight="@+id/txtBadgesLabels"
                android:layout_alignEnd="@+id/txtBadgesLabels" />

            <TextView
                android:text="Ratings"
                android:layout_width="50dp"
                android:gravity="center"
                android:id="@+id/txtRate"
                android:layout_height="25dp"
                android:layout_below="@+id/txtRatings"
                android:layout_toRightOf="@+id/imgRatings"
                android:layout_toEndOf="@+id/imgRatings" />

            <TextView
                android:text="0"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:id="@+id/txtRatings"
                android:layout_alignTop="@+id/imgRatings"
                android:layout_toRightOf="@+id/imgRatings"
                android:layout_toEndOf="@+id/imgRatings" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:id="@+id/imgBadges"
                android:layout_alignTop="@+id/txtTrips"
                android:layout_toRightOf="@+id/txtTrips"
                android:layout_toEndOf="@+id/txtTrips" />

            <TextView
                android:text="Badges"
                android:layout_width="50dp"
                android:gravity="center"
                android:id="@+id/txtBadgesLabels"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/imgBadges"
                android:layout_toEndOf="@+id/imgBadges"
                android:layout_below="@+id/txtBadges" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:id="@+id/imgRatings"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/background_border"
            >
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
