<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_feeditem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@mipmap/stafe"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/txtPackageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Androidwarriors "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/rtPackageRating"/>

        <RatingBar
            android:rating="3.5"
            android:stepSize="0.5"
            android:numStars="5"
            android:id="@+id/rtPackageRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txtPackageName"
            android:layout_marginBottom="15dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
