<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv_tgtouritem"
    card_view:cardPreventCornerOverlap="false"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:textSize="17sp"
                android:text="TextView"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTourPackagePrice"
                android:layout_below="@+id/imgTourPackageImage"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:maxLength="10"
                android:ellipsize="end"/>

            <TextView
                android:textSize="17sp"
                android:text="TextView"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTourPackageNoOfSpots"
                android:layout_alignBaseline="@+id/txtTourPackageNoOfHours"
                android:layout_alignBottom="@+id/txtTourPackageNoOfHours"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:maxLength="10"
                android:ellipsize="end"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:text="TextView"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTourPackageNoOfHours"
                android:layout_marginEnd="21dp"
                android:layout_alignTop="@+id/rtTourPackageRating"
                android:layout_alignParentEnd="true"
                android:maxLines="1"
                android:maxLength="10"
                android:ellipsize="end"/>

            <RatingBar
                android:layout_height="wrap_content"
                android:id="@+id/rtTourPackageRating"
                android:isIndicator="true"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_below="@+id/txtTourPackagePrice"
                android:layout_alignParentStart="true" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgTourPackageImage"
                android:foregroundGravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card title"
                android:id="@+id/txtTourPackageName"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"
                android:textSize="17sp"
                android:layout_below="@+id/imgTourPackageImage"
                android:layout_toEndOf="@+id/rtTourPackageRating" />

        </RelativeLayout>


</android.support.v7.widget.CardView>