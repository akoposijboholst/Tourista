<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_tribe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.touristadev.tourista.ChooseTribeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/toggle1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/switch_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/toggle2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/switch_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/toggle3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/switch_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/toggle4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/switch_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:textOff=" "
                    android:textOn=" " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/toggle5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/switch_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/toggle6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/switch_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/toggle7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/switch_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/toggle8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/switch_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:textOff=" "
                    android:textOn=" " />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnProceedLanding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

</LinearLayout>

