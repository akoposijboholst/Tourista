<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cv_tgtouritem"
    app:cardUseCompatPadding="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_height="wrap_content"
                android:text="Card title"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_below="@+id/imgTourPackageImage"
                android:id="@+id/txtTourPackageName"
                android:layout_alignParentEnd="true"
                android:layout_width="150dp"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"/>

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgTourPackageImage"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_height="150dp" />

            <TextView
                android:text="TextView"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTourPackageNoOfSpots"
                android:layout_alignTop="@+id/rtTourPackageRating"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:maxLength="10"
                android:ellipsize="end"/>

            <TextView
                android:text="TextView"
                android:gravity="center"
                android:layout_marginEnd="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTourPackageNoOfHours"
                android:layout_alignBaseline="@+id/txtTourPackageNoOfSpots"
                android:layout_alignBottom="@+id/txtTourPackageNoOfSpots"
                android:layout_alignParentEnd="true"
                android:maxLines="1"
                android:maxLength="10"
                android:ellipsize="end"/>

            <TextView
                android:text="TextView"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTourPackagePrice"
                android:layout_alignBaseline="@+id/txtTourPackageName"
                android:layout_alignBottom="@+id/txtTourPackageName"
                android:layout_alignStart="@+id/rtTourPackageRating"
                android:layout_alignEnd="@+id/rtTourPackageRating"
                android:maxLines="1"
                android:maxLength="10"
                android:ellipsize="end"/>

            <RatingBar
                android:isIndicator="true"
                android:layout_height="wrap_content"
                android:id="@+id/rtTourPackageRating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="80dp"
                android:layout_below="@+id/txtTourPackagePrice"
                android:layout_alignParentStart="true"
                android:layout_marginTop="21dp" />

        </RelativeLayout>


    </FrameLayout>

</android.support.v7.widget.CardView>