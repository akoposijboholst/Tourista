<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.touristadev.tourista.fragments.HotSpotsFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="Kawasan Falls"
                android:gravity="center"
                android:layout_width="300dp"
                android:id="@+id/textView"
                android:layout_below="@+id/ratingBar"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignStart="@+id/imageView"
                android:layout_height="20dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_height="50dp"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="300dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginTop="42dp"
                android:id="@+id/imageView"
                android:layout_height="125dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="300dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginTop="31dp"
                android:id="@+id/imageView3"
                android:layout_height="125dp"
                android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView" />

            <RatingBar
                android:layout_width="wrap_content"
                android:id="@+id/ratingBar3"
                android:layout_height="50dp"
                android:layout_below="@+id/imageView3"
                android:layout_alignLeft="@+id/ratingBar"
                android:layout_alignStart="@+id/ratingBar" />

            <TextView
                android:text="Boracay"
                android:gravity="center"
                android:layout_width="300dp"
                android:id="@+id/textView3"
                android:layout_height="20dp"
                android:layout_below="@+id/ratingBar3"
                android:layout_alignLeft="@+id/imageView3"
                android:layout_alignStart="@+id/imageView3" />

            <ImageView
                android:layout_width="300dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView5"
                android:layout_height="125dp"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />

            <RatingBar
                android:layout_width="wrap_content"
                android:id="@+id/ratingBar4"
                android:layout_height="50dp"
                android:layout_below="@+id/imageView5"
                android:layout_alignLeft="@+id/ratingBar3"
                android:layout_alignStart="@+id/ratingBar3" />

            <TextView
                android:text="Mount Makiling"
                android:gravity="center"
                android:layout_below="@+id/ratingBar4"
                android:layout_width="300dp"
                android:id="@+id/textView4"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/imageView5"
                android:layout_alignStart="@+id/imageView5" />
        </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</FrameLayout>
